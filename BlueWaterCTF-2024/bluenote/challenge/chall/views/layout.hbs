  <script nonce="{{ nonce }}">
    const BLUE_CSS_COLORS = [
      "Aqua",
      "Blue",
      "CadetBlue",
      "CornflowerBlue",
      "Cyan",
      "DarkBlue",
      "DarkTurquoise",
      "DeepSkyBlue",
      "DodgerBlue",
      "LightSkyBlue",
      "MediumBlue",
      "MediumSlateBlue",
      "MediumTurquoise",
      "MidnightBlue",
      "Navy",
      "RoyalBlue",
      "SkyBlue",
      "SteelBlue",
      "Turquoise"
    ];
    const TAGS = ["h1", "h2", "h3", "h4", "h5", "h6", "b", "br", "p", "strong", "ol", "ul", "li"];
    window.addEventListener("load", () => {
      for (const t of TAGS) {
        const els = document.querySelectorAll(t);
        for (const el of els) {
          el.style.color = BLUE_CSS_COLORS[Math.floor(Math.random() * BLUE_CSS_COLORS.length)];
        }
      }
    });
  </script>
</head>
<body>
  <h1>bluenote ðŸ’¦</h1>
  {{#if error}}
  <h4 class="error">{{ error }}</h4>
  {{/if}}
  {{#if message}}
  <h4 class="message">{{ message }}</h4>
  {{/if}}
  <hr />
{{{ body }}}
</body>
</html>